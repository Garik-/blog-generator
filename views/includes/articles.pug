mixin article-list(items)
    div(class="article-list")
        each item in items
            div(class="article-item")
                article
                    if item.pinned 
                        div(class="article-pinned")
                            svg(xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 16 16" class="article-pinned-icon")
                                path(fill="currentColor" fill-rule="evenodd" d="M9.788 1.027a.5.5 0 1 0-.707.707l.59.589-3.32 3.319a2.17 2.17 0 0 1-1.346.626l-2.442.21a.833.833 0 0 0-.518 1.42l2.676 2.675-3.418 3.417a.5.5 0 1 0 .707.707l3.418-3.417 2.675 2.675a.833.833 0 0 0 1.42-.518l.209-2.441c.044-.51.266-.986.627-1.347l3.318-3.32.59.59a.5.5 0 0 0 .707-.707l-.943-.943-3.3-3.3zm-3.653 9.546 2.422 2.422.179-2.085c.063-.743.388-1.44.916-1.968l3.318-3.32-2.593-2.592L7.06 6.349a3.17 3.17 0 0 1-1.969.916l-2.084.178 2.422 2.422z" clip-rule="evenodd")
                            div(class="article-pinned-title") Pinned
                    a(class="article-content" href="/"+item.uri rel="noopener follow")
                        div(class="article-content-info")
                            h2(class="article-content-title") #{item.title}
                            h3(class="article-content-desc") #{item.description}
                            div(class="article-content-date") 
                                div #{item.date}
                        if item.image
                            div(class="article-content-image")
                                img(alt=item.title class="article-content-image-mobile" src="/v1/resize:fill:160:106/"+item.image width="80" height="53" loading="lazy")
                                img(alt=item.title class="article-content-image-desktop" src="/v1/resize:fill:320:214/"+item.image width="160" height="107" loading="lazy")
                    div(class="article-separator")
