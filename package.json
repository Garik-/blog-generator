{
  "name": "myapp",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "server:watch": "nodemon --ignore dist/ --ext js,mjs,cjs,json,md ./bin/www 3000",
    "prestart": "rm -rf public/stylesheets/*",
    "start": "run-p server:watch sass:watch postcss:watch",
    "build": "run-s build:css start:site",
    "prepublish": "npm run download",
    "publish": "./bin/publish.sh",
    "download": "./bin/download_site.sh",
    "postdownload": "node ./bin/download_images.js",
    "download:test": "npx serve ./dist",
    "sass": "sass --no-source-map sass:stylesheets",
    "sass:watch": "sass --watch sass:stylesheets",
    "postcss": "postcss stylesheets/**/*.css --dir public/stylesheets",
    "postcss:watch": "postcss stylesheets/**/*.css --dir public/stylesheets --watch",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "date-fns": "^4.1.0",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "js-yaml": "^4.1.0",
    "morgan": "~1.9.1",
    "postcss-nested": "^7.0.2",
    "pug": "^3.0.3",
    "reading-time": "^1.5.0",
    "rehype-highlight": "^7.0.1",
    "rehype-sanitize": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.1",
    "sharp": "^0.33.5",
    "unified": "^11.0.5"
  },
  "volta": {
    "node": "22.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "autoprefixer": "^10.4.20",
    "clean-css": "^5.3.3",
    "eslint": "^9.17.0",
    "eslint-plugin-jest": "^28.10.0",
    "eslint-plugin-sonarjs": "^3.0.1",
    "globals": "^15.14.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.3.0",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-hash": "^3.0.0",
    "prettier": "^3.4.2",
    "remark": "^15.0.1",
    "sass": "^1.83.0",
    "strip-markdown": "^6.0.0"
  },
  "type": "module"
}
